<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RestMAUI.MainPage">

    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">

        <Button Command="{Binding GetAllUserCommand}" Text="Get All Users"></Button>
        <Button Command="{Binding GetSingleUserCommand}" Text="Get Single Users"></Button>
        <Button Command="{Binding AddUserCommand}" Text="Add User"></Button>
        <Button Command="{Binding UpdateUserCommand}" Text="Update User"></Button>
        <Button Command="{Binding DeleteUserCommand}" Text="Delete User"></Button>
    </VerticalStackLayout>

</ContentPage>
